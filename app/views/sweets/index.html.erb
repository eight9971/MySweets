<p id="notice"><%= notice %></p>

<h1>Sweets</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Sweet</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sweets.each do |sweet| %>
      <tr>
        <td><%= sweet.shop %></td>
        <td><%= sweet.sweet %></td>
        <td><%= sweet.detail %></td>
        <td><%= link_to 'Show', sweet %></td>
        <td><%= link_to 'Edit', edit_sweet_path(sweet) %></td>
        <td><%= link_to 'Destroy', sweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sweet', new_sweet_path %>
